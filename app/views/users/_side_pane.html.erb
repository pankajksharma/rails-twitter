<div class="row span4">
	<%= gravatar_for @user %>
	<span class="current_user">
    <%= @user.name %>
  </span>
  <span class="total_post">
  	<%= pluralize @user.micropost.count, 'Micropost' %>
  </span>
  <div style="clear: both;"></div>
  <div style="text-align: center;">
    <span>
      <%= link_to pluralize(@followers_count, 'follower'), followers_user_path(@user) %>
    </span>
    <span>
      <%= link_to pluralize(@following_count, 'following'), following_user_path(@user) %>
    </span>
  	<%= render 'follow_unfollow' %>
  </div>
</div>