<% provide :sub_title, "#{@user.name} followers" %>
<div class="container" style="margin-top:120px;">
	<p id="notice"><%= notice %></p>
	<%= render 'side_pane' %>
	<div class="row span6">
		<% if @followers.any? %>
			<h4><%= @user.name %> followers</h4>
			<ul class="users">
				<%#render @followers %>
				<% @followers.each do |follower| %>
					<%= render follower.follower %>
				<% end %>
			</ul>
			<%= will_paginate @followers %>
		<% else %>
			<h4><%= @user.name %> has no followers yet.</h4>
		<% end %>
	</div>
</div>
