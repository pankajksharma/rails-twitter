<% provide :sub_title, "Users followed by #{@user.name}" %>
<div class="container" style="margin-top:120px;">
	<p id="notice"><%= notice %></p>
	<%= render 'side_pane' %>
	<div class="row span6">
		<% if @followed_users.any? %>
			<h4><%= @user.name %> is following <%= pluralize @following_count, 'user' %>.</h4>
			<ul class="users">
				<%#render @followers %>
				<% @followed_users.each do |follower| %>
					<%= render follower.followed %>
				<% end %>
			</ul>
			<%= will_paginate @followed_users %>
		<% else %>
			<h4><%= @user.name %> has no followers yet.</h4>
		<% end %>
	</div>
</div>
