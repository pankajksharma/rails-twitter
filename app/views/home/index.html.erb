<div class="container" style="margin-top:120px;">
<% if notice %>
	<p><%= notice %>
<% end %>
<% if @current_user %>
	<% provide :sub_title, "Welcome #{@current_user.name}" %>
	<%= render 'current_user' %>
<% else %>
	<% provide :sub_title, 'Home' %>
	<div class="row span3">
	<h4>Login to be Onboard.</h4>
		<%= render 'sessions/form' %>
	</div>
	<div class="row span7">
		<ul class="microposts">
			<%= render @microposts %>
		</ul>
		<%= will_paginate @microposts %>
	</div>
<% end %>
</div>